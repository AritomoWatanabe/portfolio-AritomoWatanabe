
<%= render "shared/admin_header" %>

<div class = "container">

  <div class= "row">

      <div class="col-xs-4">

        <div class="title">現場詳細</div>

        <table class="table">
          <tbody>
            <tr>
              <th>現場名</th>
              <td><%= @construction_site.name %></td>
            </tr>

            <tr>
              <th>現場住所</th>
              <td><%= @construction_site.address %></td>
            </tr>

            <tr>
              <th>元請け業者</th>
              <td><%= @construction_site.prime_contractor %></td>
            </tr>

            <tr>
              <th>現場職長</th>
              <td><%= @construction_site.foremen %></td>
            </tr>

            <tr>
              <th>現在の工程</th>
              <td><%= @construction_site.process %></td>
            </tr>

            <tr>
              <th>工期</th>
              <td><%= @construction_site.period.strftime("%Y-%m-%d") %> 〜 <%= @construction_site.period_end.strftime("%Y-%m-%d") %>（予定）</td>
            </tr>

            <tr>
              <th>その他（注意事項）</th>
              <td><%= @construction_site.caution %></td>
            </tr>
          </tbody>
        </table>

        <div class="btn1"><%= link_to "編集する",edit_admins_construction_site_path, class: 'btn btn-primary' %></div>
      </div>

      <div class="col-xs-8">

        <div class="title">現場写真</div>

        <% @photos.each do |photo| %>

        <% if photo.construction_site.id == @construction_site.id %>
        <div class="col-xs-4">
            <div class="img-thumbnail">
            <%= attachment_image_tag photo, :image, :fill, 200, 200 %>
            </div>
        </div>
        <% end %>

        <% end %>

      </div>

      <div class = "paginate"><%= paginate @photos %></div>

  </div>

</div>



