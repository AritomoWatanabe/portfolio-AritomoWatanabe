
<%= render "shared/admin_header" %>

<div class = "container">

  <div class = "row">

    <div class="title">ログイン</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <table class="table" id="none-border">

    <tbody>

      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <td><%= f.label :パスワード %></td>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>

    </tbody>

  </table>

  <div class="btn1"><%= f.submit "ログイン", class: "btn btn-success btn-lg" %></div>

  <% end %>


  </div>

</div>


