
<%= render "shared/user_header" %>

<div class = "container">

	<div class= "row">

      <div class="col-xs-4">

    		<div class="title">現場写真追加</div>


			<%= form_for @photo, url: users_photos_path do |f| %>

          <div class="genbamei">
            <%= f.label :construction_site, "現場名" %><br>
            <%= f.collection_select(:construction_site_id, ConstructionSite.all, :id, :name,:prompt => "選択してください") %>
          </div>

          <div class="image-form">
        		<div class="image-box">
          		<%= f.label "画像の追加" %>
       			</div>
        			<%= f.attachment_field :image, style:"margin-left:80px", multiple: true  %>
      		</div>

        	<div class="field form-group">
        		<%= f.label :explanation, "写真説明" %><br>
        		<%= f.text_area :explanation, class: "form-control" %>
        	</div>

          <%= f.submit "写真を追加する", class: "btn btn-primary" %>

      		<% end %>



      	</div>
    </div>

</div>


