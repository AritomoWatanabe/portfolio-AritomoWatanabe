
<%= render "shared/admin_header" %>


<div class = "container">

  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %></h4>
      <p><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
      <hr>
        <p class="mb-0">
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </p>
    </div>
  <% end %>

  <div class = "row">
      <div class="title">従業員 新規登録</div>
      <div class="btn1"><%= link_to "従業員一覧へ戻る",admins_users_path %></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <table class="table" id="none-border">

    <tbody>

      <tr>
        <td><%= f.label :名前 %></td>
        <td><%= f.label :姓 %>
          <%= f.text_field :family_name %>
        </td>

        <td><%= f.label :名 %>
          <%= f.text_field :first_name %>
        </td>
      </tr>

      <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.label :ｾｲ %>
          <%= f.text_field :family_name_kana %>
        </td>

        <td><%= f.label :ﾒｲ %>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>

       <tr>
        <td><%= f.label :メールアドレス %></td>
        <td>&emsp;&ensp;<%= f.email_field :email %></td>
        <td></td>
      </tr>

      <tr>
        <td><%= f.label :住所 %></td>
        <td>&emsp;&ensp;<%= f.text_field :address %></td>
        <td></td>
      </tr>

      <tr>
        <td><%= f.label :電話番号 %> </td>
        <td>&emsp;&ensp;<%= f.text_field :telephone_number %></td>
        <td></td>
      </tr>

      <tr>
        <td><%= f.label :パスワード %></td>
        <td>&emsp;&ensp;<%= f.password_field :password %></td>
        <td></td>
      </tr>

      <tr>
        <td><%= f.label :パスワード（確認用） %></td>
        <td>&emsp;&ensp;<%= f.password_field :password_confirmation %></td>
        <td></td>
      </tr>

    </tbody>

  </table>

  <div class="btn1"><%= f.submit "新規登録", class: "btn btn-success btn-lg" %></div>

  <% end %>

</div>

</div>

