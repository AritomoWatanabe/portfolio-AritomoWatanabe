
<%= render "shared/user_header" %>

<div class = "container">

	<div class= "row">
  		<div class="col-xs-8 col-xs-offset-2">

    		<div>
	 			<mark style="font-size: 20px;">機械・機材一覧</mark>
			</div>

		<table style="margin-top:15px">

	    	<thead class = "thead-light">
	    		<tr class="active">
		    		<th style="width:20%">機械・機材名</th>
		    		<th style="width:20%">現在地</th>
		    		<th style="width:20%">移動先選択</th>
		    		<th style="width:20%">状態</th>
		    		<th style="width:20%">　</th>
		  		</tr>
	    	</thead>

	  		<% @machines.each do |machine| %>
	    	<tbody>
				<tr>
		    		<td><%= machine.name %></td>
					<td><%= machine.construction_site.address %></td>
					<td><%= f.collection_select(:construction_site_id, ConstructionSite.all, :id, :name,:prompt => "選択してください") %></td>
					<td><%= form.check_box :need_repair, {}, "要修理", "可動可" %></td>
					<td><%= link_to "更新",users_machine_path, class: 'btn btn-primary'%></td>
				</tr>
			</tbody>
			<% end %>
		</table>


		<div class="text-center"><%= paginate @machines %></div>

		</div>
	</div>

</div>
