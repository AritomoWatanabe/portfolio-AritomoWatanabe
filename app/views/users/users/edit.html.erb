
<%= render "shared/user_header" %>

<div class = "container">

  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %></h4>
      <p><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
      <hr>
        <p class="mb-0">
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </p>
    </div>
  <% end %>



	<div class= "row">

    <div class="col-xs-7">

  	<div class="title">
	 		<%= @user.family_name %>
      <%= @user.first_name %>さんの情報編集
		</div>

			<%= form_for @user, url: users_user_path do |f| %>

    		<table border="0">

      		<tr>
        		<th>氏名</th>
        		<td><%= f.text_field :family_name, class: "form-control" %></td>
       			<td>&nbsp;&nbsp;&nbsp;</td>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
      		</tr>

      		<tr>
        		<th>フリガナ</th>
        		<td><%= f.text_field :family_name_kana, class: "form-control" %></td>
        		<td>&nbsp;&nbsp;&nbsp;</td>
        		<td><%= f.text_field :first_name_kana, class: "form-control" %></td>
      		</tr>

      		<tr>
        		<th>住所</th>
        		<td colspan="3">
              <%= f.text_field :address, class: "form-control" %>
        		</td>
      		</tr>

      		<tr>
        		<th>電話番号</th>
        		<td>
          		<%= f.text_field :telephone_number, class: "form-control" %>
        		</td>
      		</tr>

      		<tr>
        		<th>メールアドレス</th>
        		<td>
          		<%= f.text_field :email, class: "form-control" %>
        		</td>
      		</tr>


    		</table>

    		<%= f.submit('変更を保存',class: 'btn btn-primary', style: 'margin: 10px 0px 20px 0px') %>
    		<% end %>

    </div>

  </div>

</div>

